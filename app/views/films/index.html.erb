<h1>Listing films</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Url</th>
    <th>Genre</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @films.each do |film| %>
  <tr>
    <td><%= link_to film.title, film %></td>
    <td><%= link_to film.url, film.url %></td>
    <td><%= link_to film.genre.title, film.genre if film.genre %></td>
    <td><%= link_to 'Edit', edit_film_path(film) %></td>
    <td><%= link_to 'Destroy', film, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

